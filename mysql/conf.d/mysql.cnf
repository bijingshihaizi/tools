[mysql]


[mysqld]
slow_query_log = ON
slow_query_log_file = /var/lib/mysql/log/slow.log
long_query_time = 1
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
character_set_server = utf8
server_id=1
log_bin = mysql-bin
binlog_format = ROW
